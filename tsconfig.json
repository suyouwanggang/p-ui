{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES6",
    "downlevelIteration": true,
      "lib": [
          "dom",
          "es5",
          "es2015.collection",
          "es2015.iterable"
      ],
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./",
    // Only necessary because @types/uglify-js can't find types for source-map
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
   "compileOnSave": true,
  "include": [
    "custom_typings/**/*.ts",
    "elements/*.ts",
    "index.ts"
  ],
  "exclude": ["node_modules"]
}
