{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "ts",
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
   "compileOnSave": true,
  "include":[
	 "index.ts","./components/**/**.ts","./test**/**.ts"
  ],
  "exclude": ["node_modules","node_modules/@types/","ts"]
}