{
  "compilerOptions": {
    "target": "es6",
    "lib": [
          "dom",
          "es5",
          "es2015.collection",
          "es2015.iterable"
      ],
    "module": "esnext", 
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./ts",
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
   "compileOnSave": true,
  "include":[
	 "index.ts","./components/**/**.ts"
  ],
  "exclude": ["node_modules","node_modules/@types/"]
}